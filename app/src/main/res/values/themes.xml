<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SafeSync" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4F9EDE</item> <!--  // button color -->
        <item name="colorPrimaryVariant">#E6FF00</item>
        <item name="colorOnPrimary">#FFFFFF</item><!--  // button text color -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#257DFF</item><!--  // sellection color (highlited) -->
        <item name="colorSecondaryVariant">#6AFF00</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#333333</item> <!-- // status bar color -->
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/day_back</item><!-- >// background color -->
        <item name="android:textColor">#000000</item> <!--  // text color -->
    </style>

    <style name="Theme.SafeSync" parent="Base.Theme.SafeSync" />

    <style name="ToolBar">
        <item name="android:background">@color/toolbar</item>
    </style>

    <style name="textView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewforgotPassword">
        <item name="android:textColor">#A077DA</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/day2</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#3c85f2</item> <!-- // click karya pachi je color ave ee -->
        <item name="boxBackgroundColor">@color/day_back</item> <!-- // box no background color -->
        <item name="android:textColorHint">@color/day2
        </item><!-- // Hint text colore (Placeholder color) -->
        <item name="startIconTint">@color/day2</item>
        <item name="endIconTint">@color/day2</item>
        <item name="prefixTextColor">@color/day2</item>
        <item name="hintTextColor">@color/day2</item>
        <item name="counterTextColor">@color/black</item>
    </style>

    <style name="Image_view">
        <item name="srcCompat">@drawable/menu_black</item>
    </style>

    <style name="Theme.SafeSync.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SafeSync.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SafeSync.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>