<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SafeSync" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">#A33C85F2</item> <!--  // button color -->
        <item name="colorPrimaryVariant">#E6FF00</item>
        <item name="colorOnPrimary">@color/white</item><!--  // button text color -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#257DFF</item><!--  // sellection color (highlited) -->
        <item name="colorSecondaryVariant">#FF0000</item>
        <item name="colorOnSecondary">#FF0000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#333333</item> <!-- // status bar color -->
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">#1f1f1f</item><!-- >// background color -->
        <item name="android:textColor" >#888888</item> <!--  // text colore -->

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item> <!--// forces to use my colors-->
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white</item> <!-- // click karya pachi je color ave ee -->
        <item name="boxBackgroundColor">#474747</item> <!-- // box no background color -->
        <item name="android:textColorHint">@color/white</item><!-- // Hint text colore (Placeholder color) -->
        <item name="startIconTint">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="prefixTextColor">@color/white</item>
        <item name="counterTextColor">@color/white</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolBar">
        <item name="background">@color/night_back</item>
    </style>

    <style name="textView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewforgotPassword">
        <item name="android:textColor">#D0AFFF</item>
    </style>

    <style name="Image_view">
        <item name="srcCompat">@drawable/menu</item>
    </style>

</resources>